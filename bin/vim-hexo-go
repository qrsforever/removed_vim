#!/bin/bash

current_dir=`dirname ${BASH_SOURCE[0]}`
current_dir=`cd $current_dir; pwd`

destdir="$current_dir/../extern/git-blog-setting"

if [ ! -d ${destdir} ]
then
    exit 0
fi

HEXO_CMD=`which hexo`

if [[ x$HEXO_CMD == x ]]
then
    exit 0
fi

cd $destdir
killall hexo
$HEXO_CMD g --silent --draft
$HEXO_CMD s --silent --draft &
sleep 3
xdg-open http://localhost:4000
cd - >/dev/null
